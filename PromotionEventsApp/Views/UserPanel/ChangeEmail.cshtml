@model PromotionEventsApp.ViewModels.ChangeEmailViewModel


@{
    ViewData["Title"] = "Zmiana adresu E-mail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container d-flex justify-content-center">
    <div class="card shadow" style="width: 100%;">
        <div class="card-header">
            <h1> <i class="fas fa-user-cog"></i> @ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <form asp-action="ChangeEmail" method="post">
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="Email">Obecny adres E-mail</label> </strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Email" type="text" class="form-control" placeholder="Podaj obecny adres e-mail">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="Password">Hasło</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Password" type="password" class="form-control" placeholder="Podaj hasło">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="NewEmail">Nowy adres E-mail</label> </strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Email" type="text" class="form-control" placeholder="Podaj nowy e-mail">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="Email">Powtróz nowy adres E-mail</label> </strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Email" type="text" class="form-control" placeholder="Powtórz nowy e-mail hasło">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col text-center">
                        <a class="btn btn-primary" asp-action="Index"><i class="fas fa-arrow-left"></i> Cofnij</a>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Zapisz</button>
                    </div>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
            </form>
        </div>
    </div>
</div>
