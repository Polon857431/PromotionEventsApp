@model PromotionEventsApp.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Zmiana hasła";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container d-flex justify-content-center">
    <div class="card shadow" style="width: 100%;">
        <div class="card-header">
            <h1> <i class="fas fa-user-cog"></i> @ViewData["Title"]</h1>
        </div>
        <div class="card-body">
            <form asp-action="ChangePassword" method="post">
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="OldPassword">Obecne hasło</label> </strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="OldPassword" type="password" class="form-control" placeholder="Podaj obecne hasło">
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="Password">Nowe hasło</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Password" type="password" class="form-control" placeholder="np. Moje_Hasło123">
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="PasswordConfirm">Powtórz nowe hasło</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="PasswordConfirm" type="password" class="form-control" placeholder="np. Moje_Hasło123">
                        </div>
                    </div>
                </div>           
                <div class="row">
                    <div class="col text-center">
                        <a class="btn btn-primary" asp-action="Index"><i class="fas fa-arrow-left"></i> Cofnij</a>
                        <button type="submit" class="btn btn-success"><i class="fas fa-save"></i> Zapisz</button>
                    </div>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
            </form>
        </div>
    </div>
</div>