@model List<PromotionEventsApp.Helpers.Notification>

<div class="notifications" style="position: fixed; top: 30px; right: 5rem; z-index: 9000;">
    @if (Model != null)
    {
        foreach (var notification in Model)
        {
            var id = Guid.NewGuid().ToString().Replace("-", "_");
            <div class="toast" id="@id" role="alert" aria-live="assertive" aria-atomic="true" data-delay="@notification.DelayInMs">
                <div class="toast-header bg-@notification.Type.ToString().ToLower()">
                    <strong class="mr-auto text-white"><i class="fas @notification.Icon"></i> @notification.Title</strong>
                    <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="toast-body">
                    @notification.Content
                </div>
            </div>

            <script>
                $('.toast#@id').toast('show');
            </script>

        }
    }
</div>