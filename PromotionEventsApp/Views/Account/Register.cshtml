@model PromotionEventsApp.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6  text-center border border-primary">
            <p></p>
            <h2>Rejestracja</h2>

            <hr/>
            <form asp-action="Register" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl"/>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong><label asp-for="FirstName">Imię</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="FirstName" class="form-control" placeholder="np. Jan"/>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong><label asp-for="LastName">Nazwisko</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="LastName" class="form-control" placeholder="np. Kowalski"/>
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong><label asp-for="Email">Adres email</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Email" class="form-control" placeholder="np. jan.kowalski@gmail.com"/>
                        </div>

                    </div>
                </div>
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong><label asp-for="Password">Hasło</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Password" type="password" class="form-control" placeholder="np. Moje_Hasło123">
                        </div>

                    </div>
                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong><label asp-for="PasswordRepeat">Powtórz hasło</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="PasswordRepeat" type="password" class="form-control" placeholder="np. Moje_Hasło123">
                        </div>

                    </div>
                </div>

                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-primary">Zarejestruj</button>
                    </div>
                </div>

                <br/>
            </form>
        </div>
        <div class="col-3"></div>
    </div>

</div>
