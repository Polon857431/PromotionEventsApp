@model PromotionEventsApp.ViewModels.LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<div class="container ">
    <div class="row">
        <div class="col-3"></div>

        <div class="col-6 text-center border border-primary">
            <p></p>
            <h3>Logowanie</h3>

            <hr />
            <form asp-action="Login" method="post">
                <input type="hidden" name="returnUrl" value="@ViewBag.returnUrl" />
                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="Email">Adres email</label> </strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Email" type="email" class="form-control" placeholder="np. jankowalski@gmail.com">
                        </div>
                    </div>

                </div>

                <div class="form-group">
                    <div class="row">
                        <div class="col-3 text-left">
                            <strong> <label asp-for="Password">Hasło</label></strong>
                        </div>
                        <div class="col-9">
                            <input asp-for="Password" type="password" class="form-control" placeholder="np. Moje_Hasło123">
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col text-right">
                        <button type="submit" class="btn btn-outline-success">Zaloguj</button>
                        <a asp-action="Register" class="btn btn-outline-primary">Zarejestruj</a>
                    </div>
                </div>
                <div class="text-danger" asp-validation-summary="All"></div>
            </form>

        </div>
    </div>
</div>


